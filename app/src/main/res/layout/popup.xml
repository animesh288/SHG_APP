<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:fontFamily="@font/segoeui"
        android:textSize="18dp"
        android:textColor="@color/theme"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box2"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:hint="Quantity"
        android:inputType="number"
        android:maxLines="1"
        android:textAlignment="center"
        android:backgroundTint="@color/background"
        android:padding="10dp"
        android:textSize="15dp"
        android:fontFamily="@font/poppins"
        android:layout_margin="20dp"
        android:id="@+id/bidQuantity"/>

    <Button
        android:id="@+id/bidSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintTop_toBottomOf="@id/bidQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bidCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/box"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/bidCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        app:layout_constraintStart_toEndOf="@id/bidSubmit"
        app:layout_constraintTop_toBottomOf="@id/bidQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/box"
        android:paddingStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="25dp"
        android:layout_margin="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>